<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:NotesApp.ViewModels"
        xmlns:models="using:NotesApp.Models"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" 
        
        Width="1000" Height="700"
        MinWidth="800" MinHeight="500"
        WindowStartupLocation="CenterScreen"
        
        x:Class="NotesApp.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        x:Name="Root"
        Icon="/Assets/mammon.ico"
        Title="Notatnik"
        
        RequestedThemeVariant="Light">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    
    <Window.Styles>
        <Style Selector="ListBoxItem">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>
    </Window.Styles>

    <Grid ColumnDefinitions="300, *" Background="#F0F2F5">
        
        <!-- lewy panel -->
        <Grid Grid.Column="0" RowDefinitions="Auto, Auto, *, Auto" Background="White">
            
            <!-- naglowek -->
            <Border Grid.Row="0" Padding="20" Background="#2C3E50">
                <TextBlock Text="Notatnik" Foreground="White" FontWeight="Bold" FontSize="18"/>
            </Border>

            <!-- notatki <- -> zadania -->
            <Grid Grid.Row="1" ColumnDefinitions="*, *" Margin="10">
                <Button Grid.Column="0" Content="Zadania" 
                        Command="{Binding SwitchTabCommand}" CommandParameter="Task"
                        Background="{Binding IsTaskView, Converter={x:Static ObjectConverters.IsNull}}"
                        HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"/>
                <Button Grid.Column="1" Content="Notatki" 
                        Command="{Binding SwitchTabCommand}" CommandParameter="Note"
                        Background="{Binding IsNoteView, Converter={x:Static ObjectConverters.IsNull}}"
                        HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"/>
            </Grid>

            <!-- lista elementow -->
            <DockPanel Grid.Row="2" Margin="10,0">
                <!-- szukanie -->
                <TextBox DockPanel.Dock="Top" Text="{Binding FilterTagsText}" Watermark="Szukaj..." Margin="0,0,0,10"/>
                
                <!-- Lista -->
                <ListBox ItemsSource="{Binding FilteredEntries}" 
                         SelectedItem="{Binding SelectedEntry}"
                         Background="Transparent">
                    
                    <ListBox.Styles>
                        <Style Selector="ListBoxItem">
                            <Setter Property="IsHitTestVisible" Value="{Binding IsSelectable, DataType=models:IEntryComponent}"/>
                            <Setter Property="Focusable" Value="{Binding IsSelectable, DataType=models:IEntryComponent}"/>
                        </Style>
                    </ListBox.Styles>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <ContentControl Content="{Binding}">
                                <ContentControl.DataTemplates>
                                    
                                    <!-- NagÅ‚Ã³wek Daty -->
                                    <DataTemplate DataType="vm:DateHeader">
                                        <Border Background="#F0F4C3" CornerRadius="4" Padding="5,2" Margin="0,10,0,2" HorizontalAlignment="Left"
                                                IsHitTestVisible="False" Focusable="False">
                                            <TextBlock Text="{Binding Title}" FontWeight="Bold" Foreground="#827717" FontSize="11"/>
                                        </Border>
                                    </DataTemplate>

                                    <!-- Task na liÅ›cie -->
                                    <DataTemplate DataType="models:Task">
                                        <Grid ColumnDefinitions="*, Auto">
                                            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="10">
                                                <CheckBox IsChecked="{Binding IsDone}" IsHitTestVisible="True"
                                                          Command="{Binding #Root.((vm:MainWindowViewModel)DataContext).MarkAsDoneCommand}"
                                                          CommandParameter="{Binding .}"/>
                                                <TextBlock Text="{Binding Description}" 
                                                           VerticalAlignment="Center" 
                                                           FontWeight="SemiBold"
                                                           TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>
                                            <Button Grid.Column="1" Content="x" Foreground="Red" Background="Transparent" Padding="5"
                                                    Command="{Binding #Root.((vm:MainWindowViewModel)DataContext).RemoveEntryCommand}"
                                                    CommandParameter="{Binding .}"/>
                                        </Grid>
                                    </DataTemplate>

                                    <DataTemplate DataType="models:Note">
                                        <Grid ColumnDefinitions="*, Auto">
                                            <StackPanel Grid.Column="0" Orientation="Vertical">
                                                <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock Text="{Binding Description}" FontSize="10" Foreground="Gray" MaxLines="1" TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>
                                            <Button Grid.Column="1" Content="x" Foreground="Red" Background="Transparent" Padding="5"
                                                    Command="{Binding #Root.((vm:MainWindowViewModel)DataContext).RemoveEntryCommand}"
                                                    CommandParameter="{Binding .}"/>
                                        </Grid>
                                    </DataTemplate>
                                    
                                </ContentControl.DataTemplates>
                            </ContentControl>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>

            <!-- dodawanie -->
            <Border Grid.Row="3" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="15">
                <StackPanel Spacing="5">
                    <TextBlock Text="Nowy element:" FontWeight="Bold"/>
                    
                    <TextBox Text="{Binding NewNoteTitle}" Watermark="TytuÅ‚ notatki..." IsVisible="{Binding IsNoteView}"/>
                    
                    <TextBox Text="{Binding NewTaskDescription}" 
                             Watermark="{Binding EntryDescriptionWatermark}"/>
                    
                    <TextBox Text="{Binding NewEntryTags}" Watermark="Tagi (np. praca, dom)"/>

                    <StackPanel Orientation="Horizontal" Spacing="5" IsVisible="{Binding IsTaskView}">
                        <ComboBox ItemsSource="{Binding AvailablePriorities}" 
                                  SelectedItem="{Binding NewTaskPriority}"
                                  Width="100"
                                  PlaceholderText="Priorytet"/>

                        <DatePicker SelectedDate="{Binding NewTaskDueDate}"
                                    Width="120"
                                    DayFormat="dd"
                                    MonthFormat="MM"
                                    YearFormat="yy"/>
                    </StackPanel>
                    
                    <Button Content="Dodaj (+)" Command="{Binding AddNewEntryCommand}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Background="#2C3E50" Foreground="White"/>
                </StackPanel>
            </Border>
        </Grid>


        <!-- prawy panel -->
        <Border Grid.Column="1" Background="#F9F9F9">
            <Grid RowDefinitions="*, Auto">
                <Panel Grid.Row="0" Margin="20">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                                IsVisible="{Binding SelectedEntry, Converter={x:Static ObjectConverters.IsNull}}">
                        <TextBlock Text="Wybierz notatkÄ™ lub zadanie z listy" FontSize="20" Foreground="Gray"/>
                    </StackPanel>

                    <ContentControl Content="{Binding SelectedEntry}" IsVisible="{Binding SelectedEntry, Converter={x:Static ObjectConverters.IsNotNull}}">
                        <ContentControl.DataTemplates>
                            
                            <DataTemplate DataType="models:Task">
                                <StackPanel Spacing="20">
                                    
                                    <Grid ColumnDefinitions="Auto, *">
                                        <CheckBox IsChecked="{Binding IsDone}" RenderTransform="scale(1.5)" Margin="10,0,10,0" VerticalAlignment="Center"
                                                  Command="{Binding #Root.((vm:MainWindowViewModel)DataContext).MarkAsDoneCommand}"
                                                  CommandParameter="{Binding .}"/>
                                        <TextBox Grid.Column="1"
                                                 Text="{Binding Description}" 
                                                 FontSize="24" 
                                                 FontWeight="Bold" 
                                                 BorderThickness="0" 
                                                 Background="Transparent"
                                                 TextWrapping="Wrap"/>
                                    </Grid>
                                    
                                    <StackPanel Orientation="Horizontal" Spacing="10">
                                        <Border Background="#E3F2FD" CornerRadius="5" Padding="5">
                                            <TextBlock Text="{Binding Priority, StringFormat='Priorytet: {0}'}" Foreground="#1565C0"/>
                                        </Border>
                                        
                                        <Border Background="#FFEBEE" CornerRadius="5" Padding="5">
                                            <StackPanel Orientation="Horizontal" Spacing="5">
                                                <TextBlock Text="ðŸ“…"/>
                                                <TextBlock Text="{Binding DueDate, StringFormat='dd.MM.yyyy'}" Foreground="#C62828"/>
                                            </StackPanel>
                                        </Border>

                                        <ItemsControl ItemsSource="{Binding Tags}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="#F5F5F5" CornerRadius="4" Padding="5 5" Margin="0,0,5,0">
                                                        <TextBlock Text="{Binding StringFormat='#{0}'}" Foreground="Gray"/>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate><StackPanel Orientation="Horizontal"/></ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                        </ItemsControl>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>

                            <DataTemplate DataType="models:Note">
                                <Grid RowDefinitions="Auto, *, Auto">
                                    <TextBox Grid.Row="0" 
                                             Text="{Binding Title}" 
                                             FontSize="32" 
                                             FontWeight="Bold" 
                                             BorderThickness="0" 
                                             Background="Transparent" 
                                             Watermark="Bez tytuÅ‚u"
                                             Margin="0,0,0,20"/>
                                    
                                    <TextBox Grid.Row="1" 
                                             Text="{Binding Description}" 
                                             AcceptsReturn="True" 
                                             TextWrapping="Wrap" 
                                             BorderThickness="0" 
                                             Background="Transparent" 
                                             FontSize="16"
                                             VerticalAlignment="Stretch"
                                             VerticalContentAlignment="Top"/>

                                    <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="10" Margin="0,20,0,0">
                                        <ItemsControl ItemsSource="{Binding Tags}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="#FFF9C4" CornerRadius="4" Padding="8,2" Margin="0,0,5,0">
                                                        <TextBlock Text="{Binding StringFormat='#{0}'}" Foreground="#FBC02D" FontWeight="SemiBold"/>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate><StackPanel Orientation="Horizontal"/></ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                        </ItemsControl>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>

                        </ContentControl.DataTemplates>
                    </ContentControl>
                </Panel>

                <!-- obserwatorzy -->
                <Border Grid.Row="1" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="20">
                    <Grid ColumnDefinitions="*, *, *, *"> <!-- 4 Kolumny na statystyki -->
                        
                        <!-- zadania -->
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="ZADANIA" FontSize="10" Foreground="Gray" FontWeight="Bold"/>
                            <TextBlock Text="{Binding TaskStatsText}" FontSize="12" TextWrapping="Wrap"/>
                        </StackPanel>

                        <!-- notatki -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="NOTATKI" FontSize="10" Foreground="Gray" FontWeight="Bold"/>
                            <TextBlock Text="{Binding NoteStatsText}" FontSize="12"/>
                        </StackPanel>

                        <!-- deadliny -->
                        <StackPanel Grid.Column="2" VerticalAlignment="Center">
                            <TextBlock Text="DEADLINY" FontSize="10" Foreground="Gray" FontWeight="Bold"/>
                            <TextBlock Text="{Binding WeeklyStatsText}" FontSize="11"/>
                        </StackPanel>

                        <!-- priorytety -->
                        <StackPanel Grid.Column="3" VerticalAlignment="Center">
                            <TextBlock Text="PRIORYTETY" FontSize="10" Foreground="Gray" FontWeight="Bold"/>
                            <TextBlock Text="{Binding PriorityStatsText}" FontSize="11" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>