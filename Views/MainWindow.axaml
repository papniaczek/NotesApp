<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:NotesApp.ViewModels"
        xmlns:models="using:NotesApp.Models"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" 
        
        Width="1000" Height="700"
        MinWidth="800" MinHeight="500"
        WindowStartupLocation="CenterScreen"
        
        x:Class="NotesApp.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        x:Name="Root"
        Icon="/Assets/avalonia-logo.ico"
        Title="NotesApp Desktop"
        
        RequestedThemeVariant="Light">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    
    <Window.Styles>
        <!-- Styl dla listy po lewej -->
        <Style Selector="ListBoxItem">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>
    </Window.Styles>

    <!-- GWNY GRID: 2 Kolumny -->
    <Grid ColumnDefinitions="300, *" Background="#F0F2F5">
        
        <!-- === LEWY PANEL (Sidebar) === -->
        <Grid Grid.Column="0" RowDefinitions="Auto, Auto, *, Auto" Background="White">
            
            <!-- 1. NAGWEK -->
            <Border Grid.Row="0" Padding="20" Background="#2C3E50">
                <TextBlock Text="NotesApp" Foreground="White" FontWeight="Bold" FontSize="18"/>
            </Border>

            <!-- 2. PRZECZNIK (Zadania / Notatki) -->
            <Grid Grid.Row="1" ColumnDefinitions="*, *" Margin="10">
                <Button Grid.Column="0" Content="Zadania" 
                        Command="{Binding SwitchTabCommand}" CommandParameter="Task"
                        Background="{Binding IsTaskView, Converter={x:Static ObjectConverters.IsNull}}"
                        HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"/>
                <Button Grid.Column="1" Content="Notatki" 
                        Command="{Binding SwitchTabCommand}" CommandParameter="Note"
                        Background="{Binding IsNoteView, Converter={x:Static ObjectConverters.IsNull}}"
                        HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"/>
            </Grid>

            <!-- 3. LISTA ELEMENTW (Tytuy) -->
            <DockPanel Grid.Row="2" Margin="10,0">
                <!-- Szukajka -->
                <TextBox DockPanel.Dock="Top" Text="{Binding FilterTagsText}" Watermark="Szukaj..." Margin="0,0,0,10"/>
                
                <!-- Lista -->
                <ListBox ItemsSource="{Binding FilteredEntries}" 
                         SelectedItem="{Binding SelectedEntry}"
                         Background="Transparent">
                    
                    <!-- TUTAJ JEST NAPRAWA KLIKANIA -->
                    <ListBox.Styles>
                        <!-- Styl dla kontenera wiersza (ListBoxItem) -->
                        <Style Selector="ListBoxItem">
                            <!-- Bindujemy IsHitTestVisible do waciwoci modelu IsSelectable -->
                            <!-- Jeli IsSelectable=false (Nag贸wek), to cay wiersz ignoruje myszk -->
                            <Setter Property="IsHitTestVisible" Value="{Binding IsSelectable}"/>
                            <!-- Wyczamy te偶 nawigacj klawiatur -->
                            <Setter Property="Focusable" Value="{Binding IsSelectable}"/>
                        </Style>
                    </ListBox.Styles>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid ColumnDefinitions="*, Auto">
                                <!-- Wywietlanie na licie: Zale偶y od typu -->
                                <ContentControl Content="{Binding}">
                                    <ContentControl.DataTemplates>
                                        
                                        <!-- Nag贸wek Daty -->
                                        <DataTemplate DataType="vm:DateHeader">
                                            <Border Background="#F0F4C3" CornerRadius="4" Padding="5,2" Margin="0,10,0,2" HorizontalAlignment="Left">
                                                <TextBlock Text="{Binding Title}" FontWeight="Bold" Foreground="#827717" FontSize="11"/>
                                            </Border>
                                        </DataTemplate>

                                        <!-- Task na licie -->
                                        <DataTemplate DataType="models:Task">
                                            <StackPanel Orientation="Horizontal" Spacing="10">
                                                <CheckBox IsChecked="{Binding IsDone}"/> 
                                                <TextBlock Text="{Binding Description}" 
                                                           VerticalAlignment="Center" 
                                                           FontWeight="SemiBold"
                                                           TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>
                                        </DataTemplate>

                                        <!-- Notatka na licie (TYLKO TYTU) -->
                                        <DataTemplate DataType="models:Note">
                                            <StackPanel Orientation="Vertical">
                                                <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock Text="{Binding Description}" FontSize="10" Foreground="Gray" MaxLines="1" TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>
                                        </DataTemplate>
                                        
                                    </ContentControl.DataTemplates>
                                </ContentControl>
                                
                                <!-- Przycisk usuwania na licie -->
                                <Button Grid.Column="1" Content="x" Foreground="Red" Background="Transparent" Padding="5"
                                        Command="{Binding #Root.((vm:MainWindowViewModel)DataContext).RemoveEntryCommand}"
                                        CommandParameter="{Binding .}"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>

            <!-- 4. DODAWANIE (Uproszczone na dole) -->
            <Border Grid.Row="3" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="15">
                <StackPanel Spacing="5">
                    <TextBlock Text="Nowy element:" FontWeight="Bold"/>
                    
                    <!-- Pole Tytuu (Tylko dla notatek) -->
                    <TextBox Text="{Binding NewNoteTitle}" Watermark="Tytu notatki..." IsVisible="{Binding IsNoteView}"/>
                    
                    <TextBox Text="{Binding NewTaskDescription}" Watermark="{Binding IsNoteView, StringFormat='Tre notatki...', FallbackValue='Tre zadania...'}"/>
                    
                    <TextBox Text="{Binding NewEntryTags}" Watermark="Tagi (np. praca, dom)"/>

                    <!-- NOWE: Wyb贸r Priorytetu i Daty (Widoczny tylko dla Zada) -->
                    <StackPanel Orientation="Horizontal" Spacing="5" IsVisible="{Binding IsTaskView}">
                        
                        <!-- Priorytet -->
                        <ComboBox ItemsSource="{Binding AvailablePriorities}" 
                                  SelectedItem="{Binding NewTaskPriority}"
                                  Width="100"
                                  PlaceholderText="Priorytet"/>

                        <!-- Data (DatePicker) -->
                        <DatePicker SelectedDate="{Binding NewTaskDueDate}"
                                    Width="120"
                                    DayFormat="dd"
                                    MonthFormat="MM"
                                    YearFormat="yy"/>
                    </StackPanel>
                    <Button Content="Dodaj (+)" Command="{Binding AddNewEntryCommand}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Background="#2C3E50" Foreground="White"/>
                </StackPanel>
            </Border>
        </Grid>


        <!-- === PRAWY PANEL (Content / Edytor) === -->
        <Border Grid.Column="1" Padding="40" Background="#F9F9F9">
            <!-- Wywietla szczeg贸y ZAZNACZONEGO elementu -->
            <Panel>
                <!-- PUSTY STAN (Widoczny gdy SelectedEntry == null) -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                            IsVisible="{Binding SelectedEntry, Converter={x:Static ObjectConverters.IsNull}}">
                    <TextBlock Text="" FontSize="50" HorizontalAlignment="Center"/>
                    <TextBlock Text="Wybierz notatk lub zadanie z listy" FontSize="20" Foreground="Gray"/>
                </StackPanel>

                <!-- ZAWARTO (Widoczna gdy SelectedEntry != null) -->
                <ContentControl Content="{Binding SelectedEntry}" IsVisible="{Binding SelectedEntry, Converter={x:Static ObjectConverters.IsNotNull}}">
                    <ContentControl.DataTemplates>
                        
                        <!-- WIDOK SZCZEGOWY ZADANIA -->
                        <DataTemplate DataType="models:Task">
                            <StackPanel Spacing="20">
                                <TextBlock Text="ZADANIE" Foreground="Gray" FontSize="12" LetterSpacing="2"/>
                                
                                <Grid ColumnDefinitions="Auto, *">
                                    <!-- Checkbox powikszony RenderTransformem (bezpieczniej ni偶 LayoutTransform) -->
                                    <CheckBox IsChecked="{Binding IsDone}" RenderTransform="scale(1.5)" Margin="10,0,10,0" VerticalAlignment="Center"/>
                                    
                                    <TextBox Grid.Column="1"
                                             Text="{Binding Description}" 
                                             FontSize="24" 
                                             FontWeight="Bold" 
                                             BorderThickness="0" 
                                             Background="Transparent"
                                             TextWrapping="Wrap"/>
                                </Grid>
                                
                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <Border Background="#E3F2FD" CornerRadius="5" Padding="5">
                                        <TextBlock Text="{Binding Priority, StringFormat='Priorytet: {0}'}" Foreground="#1565C0"/>
                                    </Border>
                                    
                                    <Border Background="#FFEBEE" CornerRadius="5" Padding="5">
                                        <StackPanel Orientation="Horizontal" Spacing="5">
                                            <TextBlock Text=""/>
                                            <TextBlock Text="{Binding DueDate, StringFormat='dd.MM.yyyy'}" Foreground="#C62828"/>
                                        </StackPanel>
                                    </Border>
                                    
                                    <ItemsControl ItemsSource="{Binding Tags}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#F5F5F5" CornerRadius="4" Padding="5,5" Margin="0,0,5,0">
                                                    <TextBlock Text="{Binding StringFormat='#{0}'}" Foreground="Gray"/>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate><StackPanel Orientation="Horizontal"/></ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                    </ItemsControl>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>

                        <!-- WIDOK SZCZEGOWY NOTATKI (Obsidian Style) -->
                        <DataTemplate DataType="models:Note">
                            <Grid RowDefinitions="Auto, *">
                                <!-- Edytowalny Tytu -->
                                <TextBox Grid.Row="0" 
                                         Text="{Binding Title}" 
                                         FontSize="32" 
                                         FontWeight="Bold" 
                                         BorderThickness="0" 
                                         Background="Transparent" 
                                         Watermark="Bez tytuu"
                                         Margin="0,0,0,20"/>
                                
                                <!-- Edytowalna Tre -->
                                <TextBox Grid.Row="1" 
                                         Text="{Binding Description}" 
                                         AcceptsReturn="True" 
                                         TextWrapping="Wrap" 
                                         BorderThickness="0" 
                                         Background="Transparent" 
                                         FontSize="16"
                                         VerticalAlignment="Stretch"
                                         VerticalContentAlignment="Top"/>
                            </Grid>
                        </DataTemplate>

                    </ContentControl.DataTemplates>
                </ContentControl>
            </Panel>
        </Border>
        
    </Grid>
</Window>